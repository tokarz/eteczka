parser: babel-eslint
ecmaFeatures:
  modules: true
  jsx: false

env:
  browser: true
  es6: true
  mocha: false
  node: true
  phantomjs: false

rules:
  # Common
  no-unused-vars: 1

  # express.js (ex: express.Router())
  new-cap: 0

  # chai.js (ex: to.be.true)
  no-unused-expressions: 0

  # since ASI
  semi: [2, "never"]
  semi-spacing:
    - 2
    - before: false
      after: false

  comma-dangle: 0
  curly: [2, "multi-line"]
  no-use-before-define: [2, "nofunc"]
  quotes: [2, "single"]

  # when use babel-eslint
  no-undef: 2
